<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_wechat_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@mipmap/wechat_friends"
        android:text="@string/wechat_friends"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/text_wechat_moments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@mipmap/wechat_moments"
        android:text="@string/wechat_moments"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/text_wechat_friends"
        android:gravity="center_horizontal"/>

</RelativeLayout>